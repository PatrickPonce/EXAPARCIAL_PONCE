@model IEnumerable<EXAPARCIAL_PONCE.Models.Curso>
@{
    ViewData["Title"] = "Catálogo de Cursos";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text" name="nombre" value="@(Context.Request.Query["nombre"].ToString())" class="form-control" placeholder="Nombre del curso" />
        </div>
        <div class="col-md-2">
            <input type="number" name="creditosMin" value="@(Context.Request.Query["creditosMin"].ToString())" class="form-control" placeholder="Créditos mín." />
        </div>
        <div class="col-md-2">
            <input type="number" name="creditosMax" value="@(Context.Request.Query["creditosMax"].ToString())" class="form-control" placeholder="Créditos máx." />
        </div>
        <div class="col-md-2">
            <input type="time" name="horaInicio" value="@(Context.Request.Query["horaInicio"].ToString())" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="time" name="horaFin" value="@(Context.Request.Query["horaFin"].ToString())" class="form-control" />
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Créditos</th>
            <th>Horario</th>
            <th>Cupo Máximo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Codigo</td>
            <td>@c.Nombre</td>
            <td>@c.Creditos</td>
            <td>@c.HorarioInicio.ToString(@"hh\:mm") - @c.HorarioFin.ToString(@"hh\:mm")</td>
            <td>@c.CupoMaximo</td>
            <td>
                <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-outline-primary">Ver detalle</a>
            </td>
        </tr>
    }
    </tbody>
</table>
